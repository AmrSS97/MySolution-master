@model Leave_System.Models.VacationRequestVM

@{
    ViewData["Title"] = "Review";
}

<h1>Review</h1>

<div>
    <h4>Vacation Request</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
         Employee Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class = "col-sm-2">
            Vacation Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VacationTypeName)
        </dd>
        <dt class = "col-sm-2">
           Start Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
           End Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
         Date Requested
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>
        <dt class = "col-sm-2">
           Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Approve", "ApproveRequest", new { id = Model.Id }) |
    @Html.ActionLink("Reject", "RejectRequest", new { id = Model.Id }) | 
    <a asp-action="Index">Back to List</a>
</div>
